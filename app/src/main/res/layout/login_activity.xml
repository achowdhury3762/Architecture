<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/aux_background"
    android:orientation="vertical"
    android:gravity="center"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/aux_logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:paddingLeft="48dp"
        android:paddingRight="48dp">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            android:id="@+id/login_card_view"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:padding="13dp"
                        android:tint="@color/dark_gray"
                        android:src="@drawable/ic_headset_mic_black_24dp"/>

                    <EditText
                        android:textSize="18sp"
                        android:paddingTop="3dp"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/lobby_username"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:padding="13dp"
                        android:tint="@color/dark_gray"
                        android:src="@drawable/ic_lock_black_24dp">
                    </ImageView>

                    <EditText
                        android:paddingBottom="3dp"
                        android:id="@+id/password_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/lobby_password"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorDivider"
            android:elevation="2dp"
            android:layout_marginLeft="24dp">
        </View>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/sapphire"/>
</LinearLayout>